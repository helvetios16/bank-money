---
import Layout from "../layouts/Layout.astro";
import BentoGrid from "../components/bento/BentoGrid.vue";
---

<Layout title="Bank Money | VR Experience">
  <!-- Contenedor del fondo -->
  <div class="fixed inset-0 -z-10">
    <!-- Fondo de gradiente -->
    <div class="absolute inset-0 bg-gradient-to-b from-phantom-darker via-phantom-dark to-phantom-darker"></div>
    <!-- Ruido sutil -->
    <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle, var(--color-phantom-accent) 1px, transparent 1px); background-size: 20px 20px;"></div>

  </div>

  <!-- Contenido principal -->
  <main class="h-screen flex flex-col lg:overflow-hidden">
    <div class="flex-grow flex p-2 md:p-4">
      <BentoGrid client:load />
    </div>
  </main>

</Layout>
