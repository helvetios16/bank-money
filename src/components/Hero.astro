---
import { ChevronDown, Play } from "lucide-react";
---

<section 
  id="hero"
  class="relative min-h-screen flex items-center justify-center pt-16 px-4"
  aria-labelledby="hero-title"
>
  <!-- Fondo con efecto de grid -->
  <div class="absolute inset-0 opacity-20">
    <div 
      class="absolute inset-0"
      style="background-image: linear-gradient(#00f0ff 1px, transparent 1px), linear-gradient(90deg, #00f0ff 1px, transparent 1px);
             background-size: 50px 50px;"
    ></div>
  </div>

  <!-- Efecto de resplandor -->
  <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-phantom-accent opacity-10 blur-3xl rounded-full"></div>

  <div class="relative z-10 text-center max-w-5xl mx-auto animate-fadeInUp">
    <!-- Tag superior -->
    <div class="inline-block mb-6 px-4 py-2 bg-phantom-accent/10 border border-phantom-accent/30 rounded-full">
      <span class="text-phantom-accent text-sm font-mono">
        COOPERATIVO • REALIDAD VIRTUAL • SIGILO
      </span>
    </div>

    <!-- Título principal -->
    <h1 id="hero-title" class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold mb-6 leading-tight">
      THE <span class="text-phantom-accent">PHANTOM</span><br />
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-phantom-accent to-white">HEIST</span>
    </h1>

    <!-- Subtítulo -->
    <p class="text-xl sm:text-2xl text-gray-300 mb-12 max-w-3xl mx-auto leading-relaxed">
      Experiencia cooperativa inmersiva donde 
      <strong class="text-white">un hacker remoto</strong> y 
      <strong class="text-white"> un infiltrado VR</strong> deben coordinar el robo perfecto.
    </p>

    <!-- Botones CTA -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16">
      <a 
        href="#prototype"
        class="btn-primary inline-flex items-center gap-2 group"
        aria-label="Ver prototipo interactivo"
      >
        <Play size={20} class="group-hover:scale-110 transition-transform" />
        Ver Prototipo
      </a>
      <a 
        href="#team"
        class="btn-secondary inline-flex items-center gap-2"
        aria-label="Conocer al equipo de desarrollo"
      >
        Contactar Equipo
      </a>
    </div>

    <!-- Estadísticas -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
      {
        [
          { value: '4', label: 'Fases de Juego' },
          { value: '2', label: 'Jugadores' },
          { value: '20', label: 'Min por Partida' },
          { value: 'VR', label: 'Experiencia Inmersiva' },
        ].map((stat) => (
          <div class="bg-phantom-dark/50 backdrop-blur-sm border border-phantom-accent/20 rounded-lg p-4 hover:border-phantom-accent/50 transition-colors duration-300">
            <div class="text-3xl font-bold text-phantom-accent mb-1">{stat.value}</div>
            <div class="text-sm text-gray-400">{stat.label}</div>
          </div>
        ))
      }
    </div>

    <!-- Indicador scroll -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <a 
        href="#phases"
        class="text-phantom-accent hover:text-white transition-colors"
        aria-label="Desplazarse a fases del juego"
      >
        <ChevronDown size={32} />
      </a>
    </div>
  </div>
</section>

